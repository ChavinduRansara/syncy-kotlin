<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/md_theme_surface_container"
    app:strokeWidth="1dp"
    app:strokeColor="@color/md_theme_outline_variant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with folder name and status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">            <TextView
                android:id="@+id/tvFolderName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Folder Name"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textSize="16sp"
                android:textColor="@color/md_theme_on_surface"
                android:maxLines="1"
                android:ellipsize="end" /><com.google.android.material.chip.Chip
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synced"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                app:chipBackgroundColor="@color/md_theme_tertiary_container"
                app:chipStrokeWidth="0dp"
                style="@style/Widget.Material3.Chip.Assist" />

        </LinearLayout>        <!-- Local path -->
        <TextView
            android:id="@+id/tvLocalPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Local path"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textSize="14sp"
            android:textColor="@color/md_theme_on_surface_variant"
            android:maxLines="1"
            android:ellipsize="middle" />        <!-- Remote device -->
        <TextView
            android:id="@+id/tvRemoteDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Synced with: Device Name"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textSize="14sp"
            android:textColor="@color/md_theme_on_surface_variant" /><!-- File info -->        <TextView
            android:id="@+id/tvFileInfo"            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="0 files â€¢ 0 MB"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textSize="14sp"
            android:textColor="@color/md_theme_on_surface" /><!-- Last sync time -->
        <TextView
            android:id="@+id/tvLastSync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Last sync: Never"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textSize="14sp"
            android:textColor="@color/md_theme_on_surface_variant" />

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="end">            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Remove"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResync"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Resync"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
